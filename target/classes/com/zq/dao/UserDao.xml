<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zq.dao.UserDao">

    <select id="insertUser" >
        insert into user(name,password) values(#{name},#{password})
    </select>
    <!--展示所有用户-->
    <select id="showAll" resultType="com.zq.bean.User">
       select * from user ;
    </select>
    <!--按名字查询用户-->
    <select id="selectUser" resultType="com.zq.bean.User">
      select * from user where name = #{name};
    </select>
    <!--根据密码和账户查询用户-->
    <select id="login" resultType="com.zq.bean.User">
        select * from  user where name = #{name} and password = #{password};
    </select>
    <!--根据用户名找到用户更改用户密码-->
    <select id="updataPassword" resultType="com.zq.bean.User">
        update  user set  password = #{password} where name =#{name};
    </select>
    <!--根据用户名找到用户更改用户身份-->
    <update id="updataStatus" parameterType="user">
        update user set status = #{status} where name =#{name};
    </update>
    <!--根据用户名找到用户更改用户状态-->
    <update id="updataLockState" parameterType="user">
        update user set lockState = #{lockState} where name =#{name};
    </update>
    <!--根据用户名找到用户删除用户-->
    <delete id="deleteUser">
        delete from user where name=#{name};
    </delete>
    <!--注册-->
    <insert id="" parameterType="user" keyProperty="name">

    </insert>
</mapper>