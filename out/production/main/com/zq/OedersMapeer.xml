<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mapper.OrdersMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bean.Orders">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="orderno" property="orderno" />
        <result column="price" property="price" />
        <result column="optime" property="optime" />
        <result column="status" property="status" />
        <result column="bak1" property="bak1" />
        <result column="bak2" property="bak2" />
        <result column="bak3" property="bak3" />
        <result column="isdel" property="isdel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uid, orderno, price, optime, status, bak1, bak2, bak3, isdel
    </sql>
    <select id="tongji" resultType="map">
        select g.name,sum(d.quantity) as quantity,sum(d.quantity*d.price) as price from orders o,ordersdetail d,goods g where o.id=d.oid and d.gid=g.id
        <if test="time1!=null and time1!=''">
            and o.optime &gt; #{time1}
        </if>
        <if test="time2!=null and time2!=''">
            and o.optime &lt; #{time2}
        </if>
        group by g.name
    </select>
</mapper>
